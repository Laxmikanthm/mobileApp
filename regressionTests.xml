<?xml version="1.0" encoding="UTF-8"?>
        <!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="MobileApp_RegressionTests">
    <test name="single">
        <parameter name="platform" value="${platform}"></parameter>
        <parameter name="browserOrDevice" value="${deviceName}"></parameter>
        <parameter name="version" value="${platformVersions}"></parameter>
        <parameter name="os" value="Windows"></parameter>
        <parameter name="driverName" value="${driverName}"></parameter>
        <parameter name="appPaths" value="${app}"></parameter>
        <parameter name="projectName" value="${driverName}"></parameter>
        <classes>
            <class name="AppVersion">
                <methods>
                    <include name="verifyAppVersion"/>
                </methods>
            </class>
            <class name="EmailPreferences">
                <methods>
                    <include name="verifyEmailPreferencesPage"/>
                </methods>
            </class>
            <class name="HelpPage">
                <methods>
                    <include name="verifyHelpPage"/>
                </methods>
            </class>
            <class name="Privacypolicy">
                <methods>
                    <include name="verifyPrivacyPolicy"/>
                </methods>
            </class>

            <class name="ResetPasswordTest">
                <methods>
                    <include name="resetPassword"/>
                </methods>
            </class>

       <class name="ForgotPassword">
           <methods>
               <include name="forgotPassword"/>
           </methods>
       </class>
        <class name="PaymentMethods">

            <methods>
                <include name="addCreditCard"/>

                <include name="addDebitCard"/>

                <include name="addPayPal"/>
            </methods>

        </class>
        <class name="UserLoginTest">
            <methods>

                <include name="userLogin"/>
                <include name="userLogout"/>
                <include name="createUser"/>
            </methods>
        </class>

       <class name="PlaceRandomOrder">

            <methods>

               <include name="placeOrderAllSandwiches"/>
                <include name="placeOrderSubwayFreshFit"/>
                <include name="placeOrderPersonalPizza"/>
                <include name="placeOrderChoppedSalads"/>
                <include name="placeOrderSUBWAYFreshFitforKids"/>
                <include name="placeOrderDrinks"/>
                <include name="placeOrderBreakfast"/>
                <include name="placeOrderforMoreThanSixTimes"/>
            </methods>
        </class>
         <class name="TokenGeneration">
             <methods>
                 <include name="tokenGeneration"/>
             </methods>
         </class>
         <class name="AddFavoriteOrder">
             <methods>
                 <include name="addFavoriteOrder"/>
                 <include name="addFavoriteReOrder"/>
                 <include name="UnFavouriteOrder"/>
             </methods>
         </class>
            <class name="OrderwithSpecialInstructions">
                <methods>
                    <include name="OrderSpecialInstructions"/>
                </methods>
            </class>
            <class name="Certificates">
                <methods>
                    <include name="verifyCertificate"/>
                    <include name="redeemMultipleCertificate_5049"/>
                </methods>
            </class>
            <class name="TokenGeneration">
                <methods>
                    <include name="tokenGeneration"/>
                </methods>
            </class>
            <class name="EditCardAndPlaceOrder">
                <methods>
                    <include name="editCartVerifyPlaceOrder"/>
                    <include name="editCartAddAnotherVerifyPlaceOrder"/>
                    <include name="editCartDeleteItemVerifyPlaceOrder"/>
                    <include name="editCartSomethingElseVerifyPlaceOrder"/>
                </methods>
            </class>
            <class name="TermsandConditions">
                <methods>
                    <include name="verifyTermandConditions"/>
                </methods>
            </class>
            <class name="AddMoreItemsatCheckout">
                <methods>
                    <include name="addMoreItemsAtCheckOut"/>
                </methods>
            </class>
            <class name="CustomizeOrder">
                <methods>
                    <include name="placeCustomizeOrderAllSandwiches"/>
                </methods>
            </class>
            <class name="DeleteTopppings">
                <methods>
                    <include name="placeRandomOrderAndDeleteToppings"/>
                </methods>
            </class>
            <class name="MyWayTokenTracker">
                <methods>
                    <include name="tokenTracker"/>
                </methods>
            </class>
            <class name="OrderHistory">
                <methods>
                    <include name="verifyOrderHistory"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>