<?xml version="1.0" encoding="UTF-8"?>
        <!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="MobileApp_RegressionTests">
    <test name="single">
        <parameter name="platform" value="${platform}"></parameter>
        <parameter name="browserOrDevice" value="${deviceName}"></parameter>
        <parameter name="version" value="${platformVersions}"></parameter>
        <parameter name="os" value="Windows"></parameter>
        <parameter name="driverName" value="${driverName}"></parameter>
        <parameter name="appPaths" value="${app}"></parameter>
        <parameter name="projectName" value="${driverName}"></parameter>


        <classes>
           <!-- favoriteTest-->
            <class name="favoriteTest.AddFavoriteOrder"/>
            <!-- findStoreTest-->
            <!-- myLoyaltyTest-->
            <class name="myLoyaltyTest.TokenGeneration"/>
            <class name="myLoyaltyTest.Certificates">
                <methods>
                    <include name="verifyCertificate"/>
                    <include name="redeemMultipleCertificate_5049"/>
                </methods>
            </class>
            <class name="myLoyaltyTest.MyWayTokenTracker">
                <methods>
                    <include name="tokenTracker"/>
                </methods>
            </class>
            <!-- orderManagementTest-->
            <class name="orderManagementTest.OrderHistory"/>
            <!-- orderTest-->
            <class name="orderTest.PaymentMethods">
                <methods>
                    <include name="addCreditCard"/>

                    <include name="addDebitCard"/>

                    <include name="addPayPal"/>
                </methods>
            </class>
            <class name="orderTest.PlaceRandomOrder">

                <methods>

                    <include name="placeOrderAllSandwiches"/>
                    <include name="placeOrderSubwayFreshFit"/>
                    <include name="placeOrderPersonalPizza"/>
                    <include name="placeOrderChoppedSalads"/>
                    <include name="placeOrderSUBWAYFreshFitforKids"/>
                    <include name="placeOrderDrinks"/>
                    <include name="placeOrderBreakfast"/>
                    <include name="placeOrderforMoreThanSixTimes"/>
                </methods>
            </class>
            <class name="orderTest.OrderwithSpecialInstructions"/>
            <class name="orderTest.EditCardAndPlaceOrder">
                <methods>
                    <include name="editCartVerifyPlaceOrder"/>
                    <include name="editCartAddAnotherVerifyPlaceOrder"/>
                    <include name="editCartDeleteItemVerifyPlaceOrder"/>
                    <include name="editCartSomethingElseVerifyPlaceOrder"/>
                </methods>
            </class>
            <class name="orderTest.AddMoreItemsatCheckout">
                <methods>
                    <include name="addMoreItemsAtCheckOut"/>
                </methods>
            </class>

            <class name="orderTest.CustomizeOrder">
                <methods>
                    <include name="placeCustomizeOrderAllSandwiches"/>
                </methods>
            </class>
            <class name="orderTest.DeleteTopppings">
                <methods>
                    <include name="placeRandomOrderAndDeleteToppings"/>
                </methods>
            </class>
            <!-- userIdentityTest-->
            <class name="userIdentityTest.Privacypolicy"/>
            <class name="userIdentityTest.ResetPasswordTest"/>
            <class name="userIdentityTest.ForgotPassword"/>
            <class name="userIdentityTest.UserLoginTest"/>
            <class name="userIdentityTest.TermsandConditions"/>
            <!-- userProfileTest-->
            <class name="userProfileTest.AppVersion"/>
            <class name="userProfileTest.HelpPage"/>
        </classes>
    </test>

</suite>
