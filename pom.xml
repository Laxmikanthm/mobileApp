<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.fwh.qa</groupId>
    <artifactId>mobileApp</artifactId>
    <version>1.0-SNAPSHOT</version>
    <url>http://maven.apache.org</url>
    <dependencies>
        <dependency>
            <groupId>com.fwh.qa</groupId>
            <artifactId>automationFramework</artifactId>
            <version>2.2.56-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>com.fwh.qa</groupId>
            <artifactId>ServiceFramework</artifactId>
            <version>1.2.23-SNAPSHOT</version>
        </dependency>
        <!-- https://mvnrepository.com/artifact/org.springframework/spring-context-support -->

        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-context-support</artifactId>
            <version>4.3.1.RELEASE</version>
        </dependency>
        <!-- https://mvnrepository.com/artifact/org.springframework/spring-context -->
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-context</artifactId>
            <version>4.3.1.RELEASE</version>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-core</artifactId>
            <version>4.3.1.RELEASE</version>
        </dependency>
        <!-- https://mvnrepository.com/artifact/org.springframework/spring-beans -->
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-beans</artifactId>
            <version>4.3.1.RELEASE</version>
        </dependency>
        <dependency>
            <groupId>org.testng</groupId>
            <artifactId>testng</artifactId>
            <version>6.9.10</version>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.19.1</version>
                <configuration>

                    <systemPropertyVariables>
                        <projectName></projectName>
                        <spring.profiles.active>Local</spring.profiles.active>
                        <!--<language>en</language>-->
                        <country>US</country>
                        <language>us</language>
                        <locale>us_EN</locale>
                        <ExplicitWaitTime>60</ExplicitWaitTime>
                        <!--Override the values of the Maven properties below on command line by using
                         the -D switch; if we do not override its value, it will use
                          the value we have set in the POM as a default.-->
                        <!--Mobile-->
                        <mobilePlatform>Android</mobilePlatform>
                        <platformVersions>6.0.1</platformVersions>
                        <deviceName>Nexus5</deviceName>
                        <platformName>Android</platformName>
                        <!-- driverName can be MobileApp/WebApp -->
                        <driverName>MobileApp</driverName>
                        <browserOrDevice>Nexus5</browserOrDevice>
                        <app>/Users/test-user/Downloads/subwayStagingDebug448.apk</app>
                        <appPackage>com.subway.mobile.subwayapp03</appPackage>
                        <deviceOrientation>portrait</deviceOrientation>
                        <appiumVersion>1.5.3</appiumVersion>
                        <!--<appURL>${appURL}</appURL>-->
                        <!--End Mobile-->

                        <executionPlatform></executionPlatform>
                        <udid>064b8ecaf0d4e289</udid>
                        <platform>mobile</platform>
                        <newCommandTimeout>120</newCommandTimeout>
                        <buildNumber></buildNumber>
                        <appName>mobileApp</appName>
                    </systemPropertyVariables>
                    <suiteXmlFiles>
                        <!-- TestNG suite XML files -->
                        <suiteXmlFile>testng.xml</suiteXmlFile>
                    </suiteXmlFiles>


                </configuration>
                <!--<executions>
                    <execution>
                        <goals>
                            <goal>integration-test</goal>
                            <goal>verify</goal>
                        </goals>
                    </execution>-
                </executions>
                <inherited>true</inherited> --> <!-- this perticular config is for all kids...(profiles) -->
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <distributionManagement>
        <snapshotRepository>
            <id>automationFramework</id>
            <url>http://10.50.120.151:8090/repository/automationFramework/</url>
        </snapshotRepository>
    </distributionManagement>
    <repositories>
        <repository>
            <id>automationFramework</id>
            <name>automationFramework</name>
            <url>http://10.50.120.151:8090/repository/automationFramework/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>ServiceFramework</id>
            <name>ServiceFramework</name>
            <url>http://10.50.120.151:8090/repository/ServiceFramework/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>

    </repositories>
    <pluginRepositories>
        <pluginRepository>
            <id>automationFramework</id>
            <name>automationFramework</name>
            <url>http://10.50.120.151:8090/repository/automationFramework/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </pluginRepository>

        <pluginRepository>
            <id>ServiceFramework</id>
            <name>ServiceFramework</name>
            <url>http://10.50.120.151:8090/repository/ServiceFramework/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </pluginRepository>

    </pluginRepositories>

</project>

