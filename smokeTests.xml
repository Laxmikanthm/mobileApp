<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="MobileApp_SmokeTest">
    <test name="single">
        <parameter name="platform" value="${platform}"></parameter>
        <parameter name="browserOrDevice" value="${deviceName}"></parameter>
        <parameter name="version" value="${platformVersions}"></parameter>
        <parameter name="os" value="mac"></parameter>
        <parameter name="driverName" value="${driverName}"></parameter>
        <parameter name="appPaths" value="${app}"></parameter>
        <parameter name="projectName" value="${driverName}"></parameter>
        <classes>
            <class name="UserLoginTest">
                <methods>
                    <include name="createUser"/>
                    <exclude name="userLogout"/>
                    <exclude name="userLogin"/>
                </methods>
            </class>
            <class name="Certificates">
                <methods>
                    <include name="redeemCertificate"/>
                    <exclude name="verifyCertificate"/>
                    <exclude name="redeemMultipleCertificate_5049"/>
                    <exclude name="redeemExpiredCertificate_9167"/>
                </methods>
            </class>
            <class name="Offers">
                <methods>
                    <include name="redeemOffer"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>